            @Html.DropDownList("Class", new SelectList(new[] { "One", "Two", "Three", "Four", "Five", "Six", "Seven", "Eight", "Nine", "Ten" }));
            <br><br>
            @Html.Label(" Password:")<br >
            <br><br>
                  //@Html.Password("Studentpass")
