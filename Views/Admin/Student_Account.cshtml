            @Html.ValidationMessageFor(model => model.Password)
            <br><br>
            @Html.Label("Confirm password:")<br>
            <br><br>
                //@Html.Password("Cpassword")
             @Html.PasswordFor(model => model.CPassword)
            @Html.ValidationMessageFor(model => model.CPassword)
